@page
@model Razor_UI.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Feedback Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 80%;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-top: 50px;
            margin-bottom: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px; /* Khoảng cách giữa input và nút */
            margin-bottom: 2%;
        }

        .search-box {
            position: relative;
            width: 100%;
            max-width: 400px;
        }

        .search-input {
            width: 100%;
            padding: 10px 40px 10px 15px; /* Chừa khoảng cho icon */
            border: 2px solid #ccc;
            border-radius: 25px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .search-input:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                outline: none;
            }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
        }

        .search-btn {
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 16px;
            font-weight: bold;
            transition: background 0.3s, transform 0.2s;
        }

            .search-btn:hover {
                background: #0056b3;
                transform: scale(1.05);
            }

        table {
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif;
            border: 1px solid #666;
        }

        thead {
            background-color: #444;
            color: white;
        }

        th {
            background-color: #C3C3C3;
            color: black;
            padding: 12px;
            text-align: left;
            border: 1px solid #666;
        }

        td {
            padding: 10px;
            border: 1px solid #666;
            text-align: center;
        }

            td .action-buttons {
                display: flex;
                justify-content: center;
                align-items: center;
            }

        tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(odd) {
            background-color: #e6e6e6;
        }

        tbody tr:hover {
            transition: 0.3s;
        }

        .btn {
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }


        /* Nút Delete */
        .delete-btn {
            background-color: #dc3545; /* Orange-Red */
            color: white;
        }

            .delete-btn:hover {
                background-color: #c82333; /* Darker Red */
                color: #f2f2f2;
            }

    </style>
</head>
<body>
    <div class="container">
        <form method="get">
            <div class="search-container">
                <div class="search-box">
                    <input type="text" name="SearchQuery" value="@Model.SearchQuery" placeholder="Search feedback..." class="search-input" />
                    <i class="fas fa-search search-icon"></i>
                </div>
                <button type="submit" class="btn btn-primary search-btn">Search</button>
            </div>
        </form>
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Feedback[0].Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Feedback[0].SubmittedDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Feedback[0].User)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Feedback)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.SubmittedDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                        <td>
                            <form method="post" asp-page-handler="Delete" asp-route-id="@item.FeedbackId">
                                <button type="submit" class="btn delete-btn" onclick="return confirm('Are you sure you want to delete this feedback?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
