@page
@model Razor_UI.Pages.Admin.OrderManagementModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Reset mặc định */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            width: 100%;
            height: 100%;
        }

        /* Khi sidebar ẩn */
        .sidebar.hidden + .navbar-horizontal + .main-content .container {
            width: 100%; /* Toàn màn hình khi sidebar bị ẩn */
        }

        /* Đặt chiều rộng của main-content để bao toàn bộ khu vực hiển thị */
        .main-content {
            padding: 0;
            width: 100%;
            height: 66.2dvh;
        }

        /* Cập nhật container */
        .container {
            width: 100%;
            max-width: 1250px;
            margin: 0 auto;
            border: 2px solid #ccc;
            padding: 15px;
            border-radius: 8px;
            background-color: #f9f9f9;
            margin-top: 60px;
        }

        /* Thanh công cụ chứa bộ lọc và tìm kiếm */
        .toolbar {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            align-items: center;
        }

        #filterSelect,
        .search-container input {
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        #filterSelect {
            padding-right: 12px;
        }

        .search-container {
            position: relative;
            width: 300px;
        }

            .search-container input {
                width: 100%;
                padding-right: 35px;
            }

            .search-container button {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                border: none;
                background: none;
                font-size: 18px;
                cursor: pointer;
                color: #333;
            }

                .search-container button:hover {
                    color: #000;
                }

        /* Bảng và cột */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #bdbcbc;
        }

        tfoot td {
            border-top: 2px solid #000;
            padding-top: 10px;
            text-align: right;
        }

        /* Style trạng thái */
        .status-new {
            font-weight: bold;
            color: #000;
            background-color: #e0e0e0;
        }

        .status-completed {
            color: green;
            background-color: #d4edda;
        }

        .status-canceled {
            color: red;
            background-color: #f8d7da;
        }

        /* Tổng tiền */
        #orderTotal {
            color: green;
        }

        #cancelTotal {
            color: red;
        }

        /* Phân trang */
        #pagination {
            margin: 10px 0;
            text-align: center;
        }

            #pagination button {
                padding: 5px 10px;
                margin: 0 5px;
                cursor: pointer;
                border: 1px solid #ccc;
                background-color: #fff;
                border-radius: 4px;
                transition: background-color 0.3s;
            }

                #pagination button:hover {
                    background-color: #f0f0f0;
                }

        /* Thiết lập bảng */
        #orderTable {
            width: 100%;
            border-collapse: collapse;
            font-family: Arial, sans-serif;
            border: 1px solid #666; /* Pumpkin */
        }

            /* Header của bảng */
            #orderTable thead {
                background-color: #444; /* Dark Orange */
                color: white;
            }

            #orderTable th {
                padding: 12px;
                text-align: left;
                color: black;
                border: 1px solid #666; /* Viền cam đậm */
            }

            /* Dòng dữ liệu */
            #orderTable td {
                padding: 10px;
                border: 1px solid #666;
            }

            /* Màu xen kẽ giữa các dòng */
            #orderTable tbody tr:nth-child(even) {
                background-color: #f2f2f2; /* Peach */
            }

            #orderTable tbody tr:nth-child(odd) {
                background-color: #e6e6e6; /* Light Peach */
            }

            /* Hover */
            #orderTable tbody tr:hover {
                background-color: #d9d9d9; /* Light Orange */
                transition: 0.3s;
            }

        /* Kiểu riêng cho nút "View" */

        .view-btn {
            background: linear-gradient(135deg, #4CAF50, #2E8B57); /* Hiệu ứng màu gradient */
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 14px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            /* Hover */
            .view-btn:hover {
                background: linear-gradient(135deg, #45a049, #287b46);
                box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
                transform: translateY(-2px);
            }

            /* Active (Nhấn xuống) */
            .view-btn:active {
                background: linear-gradient(135deg, #3e8e41, #246c3b);
                transform: translateY(1px);
            }

            /* Icon trong nút */
            .view-btn i {
                font-size: 16px;
            }
    </style>
</head>
<body>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
            <div class="toolbar">
                <select id="filterSelect">
                    <option value="all">All</option>
                    <optgroup label="Status">
                        <option value="New Order">New Order</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </optgroup>
                </select>

                <div class="search-container">
                    <input type="text" id="searchInput" placeholder="Search by ID or Name...">
                    <button id="searchButton"><i class="fa fa-search"></i></button>
                </div>
            </div>

            <form method="post" id="orderForm">
                @Html.AntiForgeryToken()
                <table id="orderTable">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Name</th>
                            <th>Order Date</th>
                            <th>Shipping Address</th>
                            <th>Order Status</th>
                            <th>Payment Method</th>
                            <th>Payment Status</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@(order.User != null ? order.User.FullName : "N/A")</td>
                                <td>@(order.OrderDate.HasValue ? order.OrderDate.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                                <td>@order.ShippingAddress</td>
                                <td>
                                    <div class="form-group">
                                        <select class="form-control order-status" data-order-id="@order.OrderId">
                                            <option value="Pending" selected="@(order.OrderStatus == "Pending" ? "selected" : null)">Pending</option>
                                            <option value="Processing" selected="@(order.OrderStatus == "Processing" ? "selected" : null)">Processing</option>
                                            <option value="Shipped" selected="@(order.OrderStatus == "Shipped" ? "selected" : null)">Shipped</option>
                                            <option value="Delivered" selected="@(order.OrderStatus == "Delivered" ? "selected" : null)">Delivered</option>
                                        </select>

                                    </div>
                                </td>
                                <td>@order.PaymentMethod</td>
                                <td>
                                    <div class="form-group">
                                        <select class="form-control payment-status" data-order-id="@order.OrderId">
                                            <option value="Pending" selected="@(order.PaymentStatus == "Pending" ? "selected" : null)">Pending</option>
                                            <option value="Paid" selected="@(order.PaymentStatus == "Paid" ? "selected" : null)">Paid</option>
                                        </select>
                                    </div>
                                </td>
                                <td style="text-align:right">@order.TotalAmount.ToString("N0") $</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>

            <div id="pagination">
                <button onclick="newFunction();">« Previous</button>
                <button onclick="nextPage()">Next »</button>
            </div>
        </div>
    </div>

</body>
</html>