@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lí admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>

        .main-content {
            transition: margin-left 0.3s ease; /* Chuyển động mượt khi thay đổi */
            align-items: center;
        }

        .sidebar.hidden + .main-content {
            margin-left: 0; /* Co giãn khi sidebar ẩn */
            width: 100%; /* Chiếm toàn bộ khi sidebar ẩn */
        }

        .container {
            max-width: 80%;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-top: 50px;
            margin-bottom: 20px;
        }
        /* Nút thêm mới */
        .add-btn {
            display: inline-block; /* Để giữ kiểu nút */
            text-decoration: none; /* Bỏ gạch chân */
            font-size: 16px; /* Điều chỉnh kích thước chữ */
            font-weight: bold; /* In đậm chữ */
            text-transform: uppercase; /* Chữ in hoa */
            background-color: #28a745;
            color: #fff;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            margin-bottom: 20px;
        }

            .add-btn:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

    </style>
</head>
<body>

    <div class="main-content">
        <div class="container">
            <div class="action-buttons">
                <a asp-page="/Admin/ProductManagement" class="add-btn">Product</a>
                <a asp-page="/Admin/CategoryManagement" class="add-btn">Category</a>
                <a asp-page="/Admin/AccountManagement" class="add-btn">Account</a>
                <a asp-page="/Admin/OrderManagement" class="add-btn">Order</a>
                <a asp-page="/Admin/FeedbackManagement" class="add-btn">Feedback</a>
                <a asp-page="/Admin/CategoryManagement" class="add-btn">Revenue Chart</a>
            </div>
        </div>
    </div>

</body>
